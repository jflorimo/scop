#version 330 core

in vec2 UV;
out vec3 color;
uniform sampler2D myTextureSampler;
uniform int renderMode;
flat in vec3 face_color;
 
void main(){
	if (renderMode == 5)
	{
		color = texture( myTextureSampler, UV ).rgb;
	}
	else
	{
		//color = vec3(1,0,0);
		color = face_color;
		color.r = 255;
	}

}
