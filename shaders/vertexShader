#version 330 core

layout(location = 0) in vec3 vertexPosition_modelspace;
out vec2 UV;
uniform mat4 M;
uniform mat4 V;
uniform mat4 P;
 
void main(){
	gl_Position =  P * V * M * vec4(vertexPosition_modelspace,1);

	//UV = (vec4(vertexPosition_modelspace, 1 ) * M).xy;
	UV = vertexPosition_modelspace.xy;
}
